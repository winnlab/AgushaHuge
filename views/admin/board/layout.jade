doctype html
html(lang="ru")
	head
		block header
			meta(charset="UTF-8")
			title= "Агуша | Административная панель"
			meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
			link(href="/css/admin/bootstrap.min.css" rel="stylesheet" type="text/css")
			link(href="/css/admin/font-awesome.min.css" rel="stylesheet" type="text/css")
			link(href="/css/admin/ionicons.min.css" rel="stylesheet" type="text/css")
			link(href="/css/admin/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css")

		link(href="/css/admin/AdminLTE.css" rel="stylesheet" type="text/css")

	body.skin-blue
		header.header
			a.logo(href="dashboard")= "АдминЬ-панель"
			nav.navbar.navbar-static-top(role="navigation")
				a.navbar-btn.sidebar-toggle(href="#" data-toggle="offcanvas" role="button")
					span.sr-only= "Toggle navigation"
					span.icon-bar
					span.icon-bar
					span.icon-bar
				.navbar-right
					ul.nav.navbar-nav
						li.dropdown.user.user-menu
							a.dropdown-toggle(href="#" data-toggle="dropdown")
								i.glyphicon.glyphicon-user
								span= user.username 
								i.caret
							ul.dropdown-menu
								li.user-footer
									.pull-left
										a.btn.btn-default.btn-flat(href="#")= "Профиль"
									.pull-right
										a.btn.btn-default.btn-flat(href="#")= "Выйти"
		.wrapper.row-offcanvas.row-offcanvas-left
			aside.left-side.sidebar-offcanvas
				section.sidebar
					ul.sidebar-menu
						li(class= (currentHref=='dashboard'?"active":""))
							a(href="dashboard")
								i.fa.fa-dashboard
								span= "Главная"
						li(class=(['products', 'ages', 'category', 'certificate'].indexOf(currentHref) > -1?'treeview active':'treeview'))
							a(href="#")
								i.fa.fa-th
								span Блоки продукта
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class= (currentHref=='products'?"active":""))
									a(href="/admin/products")
										i.fa.fa-th
										span= "Продукты"
								li(class= (currentHref=='ages'?"active":""))
									a(href="/admin/ages")
										i.fa.fa-th
										span= "Возраста"
								li(class= (currentHref=='category'?"active":""))
									a(href="/admin/category")
										i.fa.fa-th
										span= "Категории"
								li(class= (currentHref=='certificate'?"active":""))
									a(href="/admin/certificate")
										i.fa.fa-th
										span= "Сертификаты"
						li(class=(currentHref=='news'||currentHref=='articles'?'treeview active':'treeview'))
							a(href="#")
								i.fa.fa-th
								span Текстовые блоки
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li
									a(href="/admin/news")
										i.fa.fa-angle-double-right
										span Новости/акции
								li
									a(href="/admin/articles")
										i.fa.fa-angle-double-right
										span Статьи
						li(class=(currentHref=='clients'?'active':''))
							a(href="/admin/clients")
								i.fa.fa-th
								span Клиенты
						
						li(class=(currentHref=='tours'?'treeview active':'treeview'))
							a(href="#")
								i.fa.fa-th
								span Экскурсии
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li
									a(href="/admin/tours")
										i.fa.fa-angle-double-right
										span Список экскурсий
								li
									a(href="/admin/tour_records")
										i.fa.fa-angle-double-right
										span Список записавшихся
						
			aside.right-side
				block content

		block scripts
			script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js")
			script(src="/js/admin/jquery-ui-1.10.3.min.js" type="text/javascript")
			script(src="/js/admin/bootstrap.min.js" type="text/javascript")
			script(src="/js/admin/plugins/iCheck/icheck.min.js" type="text/javascript")

		script(src="/js/admin/AdminLTE/app.js" type="text/javascript")
